<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HillCipher.Client.Views.LoginWindow"
        Title="Вход - HillCipher"
        Background="#1a1a1a"
        Width="400" Height="350"
        WindowStartupLocation="CenterScreen">

    <Grid RowDefinitions="Auto,*,Auto" Margin="30">
        
        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Hill Cipher" 
                   FontSize="32"
                   Foreground="#f3f3f3"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>
        
        <!-- Форма -->
        <Border Grid.Row="1" Background="#2f2f2f" 
                CornerRadius="8" BorderBrush="#3a3a3a" BorderThickness="1">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                  Margin="20" RowSpacing="15">
                
                <TextBlock Grid.Row="0" 
                           Text="Имя пользователя:" 
                           Foreground="#a0a0a0"/>
                <TextBox Grid.Row="1" 
                         Name="UsernameTextBox"
                         Background="#2a2a2a"
                         Foreground="#f3f3f3"
                         BorderThickness="0"
                         Padding="10"/>
                
                <TextBlock Grid.Row="2" 
                           Text="Пароль:" 
                           Foreground="#a0a0a0"/>
                <TextBox Grid.Row="3" 
                         Name="PasswordTextBox"
                         Background="#2a2a2a"
                         Foreground="#f3f3f3"
                         BorderThickness="0"
                         Padding="10"
                         PasswordChar="*"/>
                
                <TextBlock Grid.Row="4" 
                           Name="ErrorMessageTextBlock"
                           Foreground="#ff6b6b"
                           TextWrapping="Wrap"
                           IsVisible="False"/>
            </Grid>
        </Border>
        
        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Spacing="15" Margin="0,20,0,0">
            <Button Name="LoginButton" 
                    Content="Войти" 
                    Width="100" Height="35"
                    Background="#3498db"
                    Foreground="White"/>
            <Button Name="RegisterButton" 
                    Content="Регистрация" 
                    Width="120" Height="35"
                    Background="#2ecc71"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
