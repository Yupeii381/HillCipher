<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HillCipher.Client.ViewModels"
        x:Class="HillCipher.Client.Views.MainWindow"
        Title="HillCipher"
        Background="#1a1a1a"
        Icon="/Assets/avalonia-logo.ico"
        MinHeight="400" MinWidth="600"
        Height="400" Width="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto,*" Margin="0" RowSpacing="5">
        
        <Border Grid.Row="0" Background="#202020" CornerRadius="3">
            <TextBlock Name="HeaderText"
                       Text="Шифр Хилла" 
                       FontSize="24"
                       Foreground="#f3f3f3"
                       HorizontalAlignment="Left"
                       Margin="15,15,0,15"/>
        </Border>


        <Border Grid.Row="1" Background="#2f2f2f" 
                CornerRadius="3" BorderBrush="#3a3a3a" BorderThickness="1" Margin="3">
            <Grid ColumnDefinitions="80,*" Margin="15,10">
                <TextBlock Grid.Column="0" 
                           Name="AlphabetTextBlock"
                           Text="Алфавит:" 
                           Foreground="#a0a0a0"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" 
                         Name="AlphabetTextBox"
                         Text="абвгдеёжзийклмнопрстуфхцчшщъыьэюя., ?"
                         Background="#2a2a2a"
                         Foreground="#f3f3f3"
                         BorderThickness="0"
                         CornerRadius="5"
                         Padding="10"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="#2f2f2f" 
                CornerRadius="3" BorderBrush="#3a3a3a" BorderThickness="1" Margin="3">
            <Grid RowDefinitions="Auto,*" Margin="0,10">
                <TextBlock Grid.Row="0" 
                           Name="InputTextBlock"
                           Text="Текст:" 
                           Foreground="#a0a0a0"
                           Margin="15,0,0,5"/>
                <ScrollViewer Grid.Row="1">
                <TextBox
                         Name="InputTextBox"
                         Text="никогда еще штирлиц не был так близок к провалу"
                         Background="#2a2a2a"
                         Foreground="#f3f3f3"
                         BorderThickness="0"
                         Padding="15, 10, 10, 10"
                         AcceptsReturn="True"
                         TextWrapping="Wrap">
                </TextBox></ScrollViewer>
            </Grid>
        </Border>

        <Border Grid.Row="3" Background="#2f2f2f" 
                CornerRadius="3" BorderBrush="#3a3a3a" BorderThickness="1" Margin="3">
            <Grid ColumnDefinitions="40,*,Auto,Auto" Margin="15,10" ColumnSpacing="15">
                <TextBlock Grid.Column="0" 
                           Name="KeyTextBlock"
                           Text="Ключ:" 
                           Foreground="#a0a0a0"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" 
                         Name="KeyTextBox"
                         Text="кодовое слово же"
                         Background="#2a2a2a"
                         Foreground="#f3f3f3"
                         BorderThickness="0"
                         CornerRadius="5"
                         Padding="10"/>
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Spacing="20">
                    <RadioButton Content="Шифр" 
                                 Name="CryptRadioButton"
                                 Foreground="#f3f3f3"
                                 IsChecked="True"/>
                    <RadioButton Content="Дешифр" 
                                 Name="DecryptRadioButton"
                                 Foreground="#f3f3f3"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="4" Background="#2f2f2f" 
                CornerRadius="3" BorderBrush="#3a3a3a" BorderThickness="1" Margin="3">
            <Grid RowDefinitions="Auto,*" Margin="0,5" RowSpacing="5">
                <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
					<TextBlock Grid.Column="0" 
                           Text="Результат:" 
                           Foreground="#a0a0a0"
                           Margin="15,5,0,5"/>
                    <Button Grid.Column="1" Content="Рассчитать" Foreground="#f3f3f3" Margin="0,0,15,0"/>
                </Grid>
                <ScrollViewer Grid.Row="1">
					<TextBox Background="#2a2a2a"
                         Foreground="#f3f3f3"
                         BorderThickness="0"
                         Padding="10"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
