<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HillCipher.Client.Views.LoginView">
  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10" Width="300">
    <TextBlock Text="Hill Cipher Login" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
    
    <TextBox Text="{Binding Username}" Watermark="Username" />
    <TextBox Text="{Binding Password}" Watermark="Password" PasswordChar="*" />
    
    <Button Content="Login" Command="{Binding LoginCommand}" IsEnabled="{Binding !IsBusy}" />
    <Button Content="Register" Command="{Binding RegisterCommand}" IsEnabled="{Binding !IsBusy}" />
    
    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" />
    
    <ProgressBar IsVisible="{Binding IsBusy}" IsIndeterminate="True" />
  </StackPanel>
</UserControl>
