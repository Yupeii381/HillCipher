<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HillCipher.Client.Views.MainView">
  <DockPanel>
    <!-- Top Panel -->
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
      <Button Content="Refresh" Command="{Binding RefreshCommand}" />
      <Button Content="Logout" Command="{Binding LogoutCommand}" />
    </StackPanel>

    <Grid ColumnDefinitions="*,300" RowDefinitions="*,200">
      <!-- Text List -->
      <DataGrid Grid.Row="0" Grid.Column="0" 
                ItemsSource="{Binding Texts}" 
                SelectedItem="{Binding SelectedText}"
                Margin="10" />

      <!-- Add Text Panel -->
      <StackPanel Grid.Row="1" Grid.Column="0" Margin="10" Spacing="5">
        <TextBox Text="{Binding NewText}" AcceptsReturn="True" Height="100" Watermark="Enter text to add..." />
        <Button Content="Add Text" Command="{Binding AddTextCommand}" />
      </StackPanel>

      <!-- Cipher Panel -->
      <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="10" Spacing="10">
        <TextBlock Text="Cipher Settings" FontWeight="Bold" />
        
        <TextBox Text="{Binding Key}" Watermark="Key (e.g., GYBNQKURP)" />
        <TextBox Text="{Binding Alphabet}" Watermark="Alphabet" />
        
        <StackPanel Orientation="Horizontal" Spacing="5">
          <Button Content="Encrypt" Command="{Binding EncryptCommand}" />
          <Button Content="Decrypt" Command="{Binding DecryptCommand}" />
        </StackPanel>
        
        <TextBlock Text="Result:" FontWeight="Bold" Margin="0,10,0,0" />
        <TextBox Text="{Binding Result}" IsReadOnly="True" Height="100" />
      </StackPanel>
    </Grid>
  </DockPanel>
</UserControl>
